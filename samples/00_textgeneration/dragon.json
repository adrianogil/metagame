{
    "start_game": {
        "concept_type": "definition",
        "event_subscriber": {
            "on_game_started": {
                "actions": [
                    ["set_concept", "dragon/mood", ["grammar", {
                        "text": ["#mood#"],
                        "mood": ["wrathful", "peaceful", "sleepy"]
                    }]],
                    ["describe_world"],
                    ["dragon_action"],
                    ["exit"]
                ]
            }
        }
    },
    "describe_world": {
        "concept_type": "action",
        "actions": [
            ["print", "Once upon a time, in a far way reign there was a castle and a ", ["get_concept", "dragon/mood"], " dragon."]
        ]
    },
    "dragon_action": {
        "concept_type": "action",
        "actions": [
            ["verify", "equals", ["get_concept", "dragon/mood"], "wrathful",
                ["print", "And then the dragon destroyed the castle."],
                ["verify", "equals", ["get_concept", "dragon/mood"], "peaceful",
                    ["print", "And then the dragon looks for flowers."],
                    ["verify", "equals", ["get_concept", "dragon/mood"], "sleepy",
                        ["print", "And the dragon went back to sleep."]]]]
        ]
    }
}